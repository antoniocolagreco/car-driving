---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'canvas'>

const { class: className, ...otherProps } = Astro.props
---

<script>
    import { init } from '../libs/selfDrivingCar'
    const canvasElement = document.querySelector('#drive') as HTMLCanvasElement
    if (canvasElement) init(canvasElement)
</script>

<canvas id='drive' class:list={['', className]} {...otherProps}> </canvas>
