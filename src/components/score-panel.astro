---
import type { HTMLAttributes } from 'astro/types'
import { HTML_IDS } from 'src/constants'

type Props = HTMLAttributes<'div'> & {
    label?: string
}
const { class: className, title, id, label, ...otherProps } = Astro.props
---

<div
    title={title}
    class:list={[
        'border border-white/50 p-2 flex flex-col gap-1 rounded antialiased grow overflow-hidden backdrop-blur-sm bg-black/30 text-sm',
        className,
    ]}
    {...otherProps}
>
    <div class="text-xs">Score</div>
    <div id={HTML_IDS.info.score.overtakesScore} class="text-xs font-semibold"></div>
    <div id={HTML_IDS.info.score.breakingsScore} class="text-xs font-semibold"></div>
    <div id={HTML_IDS.info.score.turningsScore} class="text-xs font-semibold"></div>
    <div id={HTML_IDS.info.score.distanceScore} class="text-xs font-semibold"></div>
    <div id={HTML_IDS.info.score.totalScore} class="text-xs font-bold"></div>
</div>
